{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@sortql/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
