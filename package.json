{
  "name": "@sortql/sortql-cli",
  "version": "1.1.0",
  "author": "Leon Meka",
  "license": "MIT",
  "description": "A file management automation tool with SQL-like syntax",
  "scripts": {
    "dev": "bun --watch index.ts",
    "test": "bun test --coverage --watch",
    "build": "bun build index.ts --outdir dist --target bun --minify && npm link",
    "prepare": "husky"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "archiver": "^7.0.1",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "husky": "^9.0.11",
    "inquirer": "^9.2.16"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/bun": "latest",
    "@types/archiver": "^6.0.2",
    "@types/inquirer": "^9.0.7",
    "@types/unzipper": "^0.10.9"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "type": "module",
  "module": "index.ts",
  "main": "dist/index.js",
  "bin": {
    "sortql": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "file-management",
    "command-line-tool",
    "cli",
    "automation",
    "sql",
    "sortql"
